<Page x:Class="Insurance_Service.Pages.ChoosingActionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Insurance_Service.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ChoosingActionPage">

    <Grid>
        <StackPanel Width="300" Height="450" VerticalAlignment="Center" Orientation="Vertical">
            <Label Content="Insurance" HorizontalAlignment="Center" FontSize="24"/>
            <Button Background="#388F72" Height="45" Margin="0,20,0,0" Content="Client Add" x:Name="clietAdd" Click="clietAdd_Click"/>
            <Button Background="#388F72" Height="45" Margin="0,20,0,0" Content="Client Show" x:Name="clientShow" Click="clientShow_Click"/>
        </StackPanel>
    </Grid>
</Page>
