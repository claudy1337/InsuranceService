<Page x:Class="Insurance_Service.Pages.STSShowPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Insurance_Service.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="STSShowPage"
      xmlns:material="http://materialdesigninxaml.net/winfx/xaml/themes"
      Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Button Background="#388F72" Width="100" x:Name="BBack" Content="Back" HorizontalAlignment="Left" Margin="5" Cursor="Hand"/>
        
        <DataGrid Grid.Row="1" x:Name="DGStst" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False"  Margin="0,28,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="id" Binding="{Binding idSTS}"/>
                <DataGridTextColumn Header="Name" Binding="{Binding idClient.Name}"/>
                <DataGridTextColumn Header="Number" Binding="{Binding idCar}"/>
                <DataGridTextColumn Header="Works" Binding="{Binding STSNumber}"/>

            </DataGrid.Columns>
        </DataGrid>
        <Button Background="#388F72" Margin="5" Height="50" Grid.Row="2" x:Name="Search"  Content="Search"/>
    </Grid>
</Page>
